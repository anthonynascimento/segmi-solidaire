{% extends "administration_layout.twig" %}

{% set menu_selected = 'home' %}

{% block title %}Admin{% endblock %}

{% block content %}


    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Liste des cours disponibles</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="example">
                                <thead>
                                <tr>
                                    <th>Nom du cours</th>
                                    <th>Description</th>
                                    <th style="">Niveau</th>
                                    <th style="">Mati√®re</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if cours['tous'] is not empty %}
                                    {% for cours in cours['tous'] %}
                                        <tr style="" onclick="parent.location=''" style="height: 6em">
                                            <td style="">{{ cours.nomCours }}</td>
                                            <td style="">{{ cours.description|raw }}</td>
                                            <td ><div style="overflow: auto; height: 6em">{{ cours.niveau }}</div></td>
                                            <td>{{ cours.matiere }}</td>
                                            <th class="">

                                                <a style="width: 90px" title="Visualiser le cours" class="btn btn-success" href="{{ path('coursDetails', {'id': cours.idCours }) }}">
                                                    <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                                                    View
                                                </a>
                                                <a style="width: 90px" title="Modifier le cours" class="btn btn-info" href="#">
                                                    <i class="glyphicon glyphicon-edit icon-white"></i>
                                                    Edit
                                                </a>
                                                <a style="width: 90px" title="Supprimer le cours" class="btn btn-danger" href="{{ path('supprimerCours', {'id': cours.idCours }) }}">
                                                    <i class="glyphicon glyphicon-trash icon-white"></i>
                                                    Delete
                                                </a>
                                            </th>
                                        </tr>

                                    {% endfor %}

                                {% else %}
                                    <strong style="color: red">Aucun cours </strong>
                                {% endif %}
                                </tbody>
                            </table>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.col-lg-8 -->

        <!-- /.col-lg-4 -->
    </div>
    <!-- /.row -->
{% endblock %}