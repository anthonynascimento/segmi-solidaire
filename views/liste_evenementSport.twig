{% extends "layout.twig" %}

{% set menu_selected = 'home' %}

{% block title %}Liste des evenements de Sport{% endblock %}

{% block content %}
    <br>
    <div class="wrapper style1">

        <section id="features" class="container special">
            <header>
                <h2>Liste des evenements de Sport</h2>
            </header>
            <div class="row">
                {% for evenementsSport in evenementsSport['tous'] %}
                    <article onclick="parent.location='{{ path('evenement_detail', {'id': evenementsSport.idEvenement }) }}'" class="4u 12u(mobile) special">
                        <a href="#" class="image featured"><img src="web/images/{{ evenementsSport.image }}" alt=""/></a>
                        <header>
                            <h3><a href="#">{{ evenementsSport.titre }}</a></h3>
                        </header>
                        <p>
                            {{ evenementsSport.description }}
                        </p>
                    </article>
                {% endfor %}
            </div>
        </section>

    </div>

{% endblock %}