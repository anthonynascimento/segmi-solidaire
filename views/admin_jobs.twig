{% extends "administration_admin_layout.twig" %}

{% set menu_selected = 'home' %}

{% block title %}Admin{% endblock %}

{% block content %}


    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Liste des mini-jobs disponibles</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="example">
                                <thead>
                                <tr>
                                    <th>Titre du mini-job</th>
                                    <th style="">Description</th>
                                    <th style="">Categorie</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if jobs['tous'] is not empty %}
                                    {% for jobs in jobs['tous'] %}
                                        <tr style="" onclick="parent.location=''" style="height: 6em">
                                            <td style="">{{ jobs.titre }}</td>
                                            <td style="">{{ jobs.description|raw }}</td>
                                            <td ><div style="">{{ jobs.categorie }}</div></td>
                                            <th class="">

                                                <a style="width: 90px" title="Visualiser le job" class="btn btn-success" href="{{ path('jobDetails', {'id': jobs.idJob }) }}">
                                                    <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                                                    View
                                                </a>
                                                <a style="width: 90px" title="Modifier le job" class="btn btn-info" href="{{ path('modifierJob', {'id': jobs.idJob }) }}">
                                                    <i class="glyphicon glyphicon-edit icon-white"></i>
                                                    Edit
                                                </a>
                                                <a style="width: 90px" title="Supprimer le job" class="btn btn-danger" href="{{ path('supprimerJob', {'id': jobs.idJob }) }}">
                                                    <i class="glyphicon glyphicon-trash icon-white"></i>
                                                    Delete
                                                </a>
                                            </th>
                                        </tr>

                                    {% endfor %}

                                {% else %}
                                    <strong style="color: red">Aucune offre de mini-job </strong>
                                {% endif %}
                                </tbody>
                            </table>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.col-lg-8 -->

        <!-- /.col-lg-4 -->
    </div>
    <!-- /.row -->
{% endblock %}