{% extends "layout.twig" %}

{% set menu_selected = 'home' %}

{% block title %}Liste des evenements de Conférence{% endblock %}

{% block content %}
    <br>
    <div class="wrapper style1">

        <section id="features" class="container special">
            <header>
                <h2>Liste des evenements de Conférence</h2>
            </header>
            <div class="row">
    {% if evenementsConf['tous'] is not empty %}
                {% for evenementsConf in evenementsConf['tous'] %}
                    <article style="cursor: pointer; height:800px" onclick="parent.location='{{ path('evenementDetails', {'id': evenementsConf.idEvenement }) }}'" class="4u 12u(mobile) special">
                        <a href="#" class="image featured"><img style="height: 350px;" src="web/images/{{ evenementsConf.image }}" alt=""/></a>
                        <div style="max-height: 15em; overflow: auto">
                        <header>
                            <h3><a href="#">{{ evenementsConf.titre }}</a></h3>
                        </header>
                        <p>
                            {{ evenementsConf.description|raw }}
                        </p>

                        <p>
                            Début de l'évenement: <b>{{ evenementsConf.dateDebut }}</b>
                        </p>
                        <p>
                            Fin de l'évenement: <b>{{ evenementsConf.dateFin }}</b>
                        </p>
                        </div>
                    </article>
                {% endfor %}
    {% else %}
        <strong style="color: red">Il n'y a actuellement aucune conférence disponible</strong>
    {% endif %}
            </div>
        </section>

    </div>

{% endblock %}