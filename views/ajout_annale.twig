{% extends "layout.twig" %}

{% set menu_selected = 'home' %}

{% block title %}accueil{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <h2>Ajouter voter aide pour une matière</h2>
            <form class="container" method="POST"  action="{{ path('ajout_annale') }}">
                <br><br>

                <div class="col-xs-4"><h4>La matière dans laquelle vous proposez l'annale</h4>
                    <!-- Page Heading/Breadcrumbs -->
                    <h1 class="mt-4 mb-3">

                        <p>Veuillez choisir la matière concernée</p>
                        <select name="matiere" class="selectpicker" data-style="btn-primary" multiple="multiple" required>
                            <option value="BD" selected>BD</option>
                            <option value="JAVA">Java</option>
                            <option value="C">C</option>
                        </select>
                    </h1>
                    <br>

                    <h4>Nom de l'annale</h4>
                    <p>
                        <input type="text" placeholder="Nom de l'annale ex: titre" class="form-control" value="" name="nom" required>
                    </p>


                    <br>

                    <h4>Année de publication</h4>
                    <p>
                        <input type="text" placeholder="YYYY" class="form-control" value="" name="datePublication" required>
                    </p>

                    <br>

                    <div class="col-xs-4"><h4>Le niveau concerné par ce livre</h4>
                        <!-- Page Heading/Breadcrumbs -->
                        <h1 class="mt-4 mb-3">

                            <p>Veuillez choisir le niveau parmis :</p>
                            <select name="niveau" class="selectpicker" data-style="btn-primary" required>
                                <option value="L1">L1</option>
                                <option value="L2">L2</option>
                                <option value="L3">L3</option>
                                <option value="M1">M1</option>
                                <option value="M2">M2</option>
                            </select>
                        </h1>
                        <br>

                    <h4>L'annale en .pdf ou .odt ou .doc</h4>
                    <input type="file" name="fichier">
                    <p>

                    <button type="submit" class="btn btn-success" onclick="alert('Votre annale a été ajoutée avec succès')";>Ajouter</button>
                    <br><br>
                </div>
            </form>
        </div>
    </div>
{% endblock %}