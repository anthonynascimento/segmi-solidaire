{% extends "layout.twig" %}

{% set menu_selected = 'home' %}

{% block title %}accueil{% endblock %}

{% block content %}
    <div class="container">
        <br><br>
        <!-- Page Heading/Breadcrumbs -->
        <h1 class="mt-4 mb-3">Liste des annales pour le niveau Licence 1
        </h1><br>
        <table id="example" class="table" cellspacing="0" width="100%">
            <thead>
            <tr>
                <th>Nom de l'annale</th>
                <th>Date de publication</th>
                <th>Mati√®re</th>
                <th>Fichier</th>
            </tr>
            </thead>
            <tbody>
            {% for annales in annales['toutes'] %}
                <tr onclick="parent.location='{{ path('annaleL1', {'id': annales.idAnnale }) }}'" style="height: 6em">
                    <td style="cursor: pointer">{{ annales.nom }}</td>
                    <td style="cursor: pointer">{{ annales.datePublication }}</td>
                    <td>{{ annales.idMatiere }}</td>
                    <td>{{ annales.fichier }}</td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}